<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Dialog Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="top"
                android:src="@drawable/svg_file_unknown_icon"
                android:id="@+id/iv_name"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/text_none"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="start"
                android:textColor="@color/color_434242"
                android:textSize="14sp"
                android:text="@string/text_type_"
                android:id="@+id/tv_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/text_none"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="start"
                android:textColor="@color/color_434242"
                android:textSize="14sp"
                android:text="@string/text_modify_time_"
                android:id="@+id/tv_time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/text_none"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="start"
                android:textColor="@color/color_434242"
                android:textSize="14sp"
                android:text="@string/text_size_"
                android:id="@+id/tv_size_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/text_none"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_full_path"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="start"
                android:textColor="@color/color_434242"
                android:textSize="14sp"
                android:text="@string/text_path_"
                android:id="@+id/tv_full_path_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/text_none"
                android:maxLines="8"
                android:ellipsize="end"
                android:id="@+id/tv_full_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_open"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_ok"
                app:layout_constraintTop_toBottomOf="@+id/tv_msg"
                android:backgroundTint="@color/color_FFF5F5F5"
                app:cornerRadius="20dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/color_FFF5F5F5"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btn_open"
                android:text="@string/text_open_file"
                android:paddingHorizontal="5dp"
                android:textStyle="bold"
                android:textColor="@color/color_1296db"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>