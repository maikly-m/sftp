<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/layout_title"
        android:id="@+id/layout_title" />
    <LinearLayout
        app:layout_constrainedHeight="true"
        android:background="@color/color_11000000"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_ripple_white_4_corner"
            android:id="@+id/ll_client"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_client"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/svg_client_icon" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/color_434242"
                android:text="@string/text_file_client" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_ripple_white_4_corner"
            android:id="@+id/ll_server"
            app:layout_constraintTop_toBottomOf="@+id/ll_client"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="4dp"
                android:id="@+id/iv_server"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/svg_server_icon" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/color_434242"
                android:text="@string/text_file_server" />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_ripple_white_4_corner"
            android:id="@+id/ll_test"
            app:layout_constraintTop_toBottomOf="@+id/ll_client"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="4dp"
                android:id="@+id/iv_test"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/svg_server_icon" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/color_434242"
                android:text="test" />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>